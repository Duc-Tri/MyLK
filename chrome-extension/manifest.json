{
  "manifest_version": 2,

  "name": "MyLK plugin",
  "description": "This extension alarms.",
  "version": "1.0",

  "permissions": [
    "alarms",
	"tabs",
    "http://*/*", 
	"https://*/*"
  ],

  "background": {
    "scripts": ["jquery-3.1.1.slim.min.js", "eventPage.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup.html"
  },
  
  "icons": { 
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png" }
}
